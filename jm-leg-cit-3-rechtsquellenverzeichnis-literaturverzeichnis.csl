  </info>
  <locale xmlns="http://purl.org/net/xbiblio/csl" xml:lang="de">
    <style-options jurisdiction-preference="LegCit"/>
    <terms>
      <term name="et-al">ea</term>
      <term name="editor" form="short">Hg</term>
      <term name="collection-editor" form="short">Begr</term>
      <term name="container-author" form="short">Red</term>
      <term name="article" form="short">
        <single>Art</single>
        <multiple>Art</multiple>
      </term>
      <term name="chapter" form="short">
        <single>Rz</single>
        <multiple>Rz</multiple>
      </term>
      <term name="note" form="short">
        <single>Fn</single>
        <multiple>Fn</multiple>
      </term>
      <term name="paragraph" form="short">
        <single>Abs</single>
        <multiple>Abs</multiple>
      </term>
    </terms>
  </locale>
  <macro name="citation-number">
    <text variable="citation-number" font-style="italic"/>
  </macro>
  <macro name="title">
    <text variable="title"/>
  </macro>
  <macro name="title-short">
    <text variable="title" form="short"/>
  </macro>
  <macro name="editor">
    <choose>
      <if variable="editor">
        <names variable="editor">
          <name form="short"/>
          <label prefix=" (" suffix=")"/>
        </names>
      </if>
      <else-if variable="collection-editor">
        <names variable="collection-editor">
          <name form="short"/>
          <label prefix=" (" suffix=")"/>
        </names>
      </else-if>
    </choose>
  </macro>
  <macro name="editor-suffix">
    <names variable="editor">
      <label form="short" prefix=" (" suffix=")"/>
      <substitute>
        <names variable="collection-editor"/>
        <names variable="container-author"/>
      </substitute>
    </names>
  </macro>
  <macro name="editor-short">
    <names variable="editor">
      <substitute>
        <names variable="collection-editor"/>
        <names variable="container-author"/>
      </substitute>
    </names>
  </macro>
  <macro name="publisher">
    <text variable="publisher"/>
  </macro>
  <macro name="publisher-place">
    <text variable="publisher-place"/>
  </macro>
  <macro name="number-of-volumes">
    <number variable="number-of-volumes"/>
  </macro>
  <macro name="issue">
    <number variable="issue"/>
  </macro>
  <macro name="URL">
    <text variable="URL" prefix="&lt;" suffix="&gt;"/>
  </macro>
  <macro name="DOI">
    <text variable="DOI"/>
  </macro>
  <macro name="extra">
    <text variable="note"/>
  </macro>
  <macro name="authority">
    <names variable="authority">
      <name/>
      <institution institution-parts="short-long">
        <institution-part name="short" prefix="(" suffix=")" strip-periods="true"/>
      </institution>
    </names>
  </macro>
  <macro name="edition">
    <number variable="edition" vertical-align="sup"/>
  </macro>
  <macro name="collection-title">
    <text variable="collection-title"/>
  </macro>
  <macro name="volume">
    <number variable="volume"/>
  </macro>
  <macro name="page">
    <number variable="page"/>
  </macro>
  <macro name="container-title">
    <group>
      <group delimiter=" ">
        <text variable="container-title"/>
        <number variable="volume"/>
      </group>
      <text macro="edition"/>
    </group>
  </macro>
  <macro name="author-short">
    <choose>
      <if type="legal_case">
        <names variable="author">
          <name form="short"/>
          <substitute>
            <names variable="editor"/>
            <names variable="translator"/>
            <text macro="authority"/>
            <text macro="title"/>
          </substitute>
        </names>
      </if>
      <else>
        <names variable="author" font-style="italic">
          <name/>
          <et-al term="et-al"/>
          <substitute>
            <text macro="editor-suffix"/>
            <names variable="editor"/>
            <names variable="translator"/>
            <text macro="title"/>
          </substitute>
        </names>
      </else>
    </choose>
  </macro>
  <macro name="year-date">
    <date variable="issued">
      <date-part name="year" form="long" suffix=""/>
    </date>
  </macro>
  <macro name="extras-and-date">
    <group delimiter=" " prefix="(" suffix=")">
      <choose>
        <if type="thesis">
          <text variable="genre"/>
          <text variable="publisher"/>
        </if>
        <else>
          <text variable="genre"/>
          <text variable="note"/>
        </else>
      </choose>
      <text macro="full-date"/>
    </group>
  </macro>
  <macro name="full-date">
    <date variable="issued">
      <date-part name="day" form="numeric-leading-zeros" suffix="."/>
      <date-part name="month" form="numeric-leading-zeros" suffix="."/>
      <date-part name="year" form="long" suffix=""/>
    </date>
  </macro>
  <macro name="locator">
    <group delimiter=" ">
      <choose>
        <if locator="page">
        </if>
        <else-if locator="section">
          <label variable="locator" form="symbol"/>
        </else-if>
        <else>
          <label variable="locator" form="short"/>
        </else>
      </choose>
      <number variable="locator"/>
    </group>
  </macro>
  <macro name="container-date-locator">
    <choose>
      <if type="article-journal article article-magazine article-newspaper" match="any">
        <group delimiter=" ">
          <text variable="container-title"/>
          <choose>
            <if variable="volume">
              <number variable="volume"/>
              <text macro="full-date" prefix="(" suffix=")"/>
              <number variable="page"/>
            </if>
            <else>
              <group delimiter=", ">
                <group delimiter="/">
                  <number variable="issue"/>
                  <text macro="full-date"/>
                </group>
                <number variable="page"/>
              </group>
            </else>
          </choose>
        </group>
      </if>
      <else>
        <group delimiter=" ">
          <text term="in"/>
          <group delimiter=", ">
            <text macro="editor-suffix"/>
            <group delimiter=" ">
              <text macro="container-title"/>
              <text macro="extras-and-date"/>
              <text macro="page"/>
            </group>
          </group>
        </group>
      </else>
    </choose>
  </macro>
  <macro name="title-volume-date">
    <group delimiter=" ">
      <choose>
        <if type="speech">
          <group delimiter=" â€“ ">
            <text variable="title"/>
            <group delimiter=", ">
              <text variable="event"/>
              <text variable="event-place"/>
            </group>
          </group>
          <text macro="full-date"/>
        </if>
        <else>
          <group>
            <group delimiter=" ">
              <text variable="title"/>
              <number variable="volume"/>
            </group>
            <text macro="edition"/>
          </group>
          <text macro="extras-and-date"/>
        </else>
      </choose>
    </group>
  </macro>
  <macro name="title-short-volume-edition">
    <group>
      <group delimiter=" ">
        <text variable="title" form="short"/>
        <number variable="volume"/>
      </group>
      <text macro="edition"/>
    </group>
  </macro>
  <macro name="author-title">
    <choose>
      <if variable="container-title">
        <group delimiter=", ">
          <text macro="author-short"/>
          <choose>
            <if type="article-journal">
              <group delimiter=" ">
                <text macro="container-title"/>
                <text macro="year-date"/>
              </group>
            </if>
            <else>
              <group delimiter=" ">
                <text term="in"/>
                <choose>
                  <if variable="title-short">
                    <text macro="title-short-volume-edition"/>
                  </if>
                  <else>
                    <text macro="editor-short"/>
                  </else>
                </choose>
              </group>
            </else>
          </choose>
        </group>
      </if>
      <else>
        <group delimiter=", ">
          <text macro="author-short"/>
          <text macro="title-short-volume-edition"/>
        </group>
      </else>
    </choose>
  </macro>
  <macro name="short-cite">
    <choose>
      <if>
        <conditions match="all">
          <condition type="chapter"/>
          <condition variable="container-title-short editor collection-editor container-author" match="any"/>
        </conditions>
        <group delimiter=" ">
          <choose>
            <if variable="page">
              <choose>
                <if>
                  <conditions match="all">
                    <condition variable="title-short"/>
                    <condition variable="container-title-short" match="none"/>
                  </conditions>
                  <group delimiter=", ">
                    <text macro="author-short"/>
                    <text macro="title-short-volume-edition"/>
                  </group>
                </if>
                <else>
                  <text macro="author-short"/>
                  <text term="in"/>
                  <choose>
                    <if variable="container-title-short">
                      <text variable="container-title-short"/>
                    </if>
                    <else>
                      <text macro="editor-short"/>
                    </else>
                  </choose>
                </else>
              </choose>
              <text macro="locator"/>
            </if>
            <else>
              <!-- Code for legal commentaries -->
            </else>
          </choose>
        </group>
      </if>
      <else>
        <group delimiter=" ">
          <text macro="author-title"/>
          <text macro="locator"/>
        </group>
      </else>
    </choose>
  </macro>

  <!-- Juris-M scaffolding -->
  <macro name="juris-pretitle">
    <text value=""/>
  </macro>
  <macro name="juris-title">
    <text value=""/>
  </macro>
  <macro name="juris-main">
    <text value=""/>
  </macro>
  <macro name="juris-tail">
    <text value=""/>
  </macro>
  <macro name="juris-pretitle-short">
    <text value=""/>
  </macro>
  <macro name="juris-title-short">
    <text value=""/>
  </macro>
  <macro name="juris-main-short">
    <text value=""/>
  </macro>
  <macro name="juris-tail-short">
    <text value=""/>
  </macro>
  <macro name="juris-locator">
    <text value=""/>
  </macro>

  <macro name="jurism">
    <choose>
      <if context="citation">
        <choose>
          <if type="legal_case">
            <group delimiter=" ">
              <text macro="juris-main-short"/>
              <text macro="juris-title"/>
            </group>
          </if>
          <else-if type="legislation">
            <group delimiter=" ">
              <text macro="juris-locator"/>
              <text macro="juris-title-short"/>
              <text macro="juris-tail-short"/>
            </group>
          </else-if>
          <else-if type="bill">
            <group delimiter=" ">
              <text macro="juris-locator"/>
              <text macro="juris-title"/>
              <text macro="juris-main-short"/>
              <number variable="locator-extra"/>
            </group>
          </else-if>
        </choose>
      </if>
      <else>
        <choose>
          <if type="legal_case">
            <group delimiter=" ">
              <text macro="juris-main"/>
              <text macro="juris-title"/>
              <text macro="juris-tail"/>
            </group>
          </if>
          <else-if type="bill">
            <group delimiter=" ">
              <text macro="juris-title"/>
              <text macro="juris-main"/>
              <text macro="juris-tail"/>
            </group>
          </else-if>
          <else-if type="legislation">
            <group delimiter=" ">
              <group delimiter=", ">
                <text macro="juris-title"/>
                <text macro="juris-main"/>
              </group>
              <text macro="juris-tail"/>
            </group>
          </else-if>
        </choose>
      </else>
    </choose>
  </macro>

  <citation et-al-min="2" et-al-use-first="1" et-al-subsequent-min="2" et-al-subsequent-use-first="1">
    <layout prefix="" suffix="." delimiter="; ">
      <choose>
        <if>
          <conditions match="all">
            <condition match="any" type="legal_case legislation bill hearing report regulation"/>
            <condition match="all" variable="jurisdiction"/>
          </conditions>
          <text macro="jurism"/>
        </if>
        <else-if type="article-journal">
          <group delimiter=", ">
            <text macro="author-title"/>
            <text macro="locator"/>
          </group>
        </else-if>
        <else>
          <text macro="short-cite"/>
        </else>
      </choose>
    </layout>
  </citation>
  <bibliography et-al-min="4" et-al-use-first="1" et-al-subsequent-min="2" et-al-subsequent-use-first="1" initialize-with=". " entry-spacing="0" hanging-indent="true">
    <sort>
      <key macro="author-short"/>
      <key variable="issued" sort="descending"/>
    </sort>
    <layout suffix=".">
      <group delimiter=" ">
        <choose>
          <if>
            <conditions match="all">
              <condition match="any" type="legal_case legislation bill hearing report regulation"/>
              <condition match="all" variable="jurisdiction"/>
            </conditions>
            <text macro="jurism"/>
          </if>
          <else-if type="legislation bill" match="any">
            <group delimiter=", ">
              <text variable="title"/>
              <group delimiter=" ">
                <text variable="container-title"/>
                <number variable="volume"/>
                <group delimiter="/">
                  <number variable="number"/>
                  <text macro="full-date"/>
                </group>
                <group delimiter=" ">
                  <text value="idF"/>
                  <text variable="references"/>
                </group>
              </group>
            </group>
          </else-if>
          <else>
            <group delimiter=", ">
              <text macro="author-short"/>
              <choose>
                <if variable="container-title">
                  <text macro="title"/>
                  <text macro="container-date-locator"/>
                </if>
                <else>
                  <text macro="title-volume-date"/>
                </else>
              </choose>
            </group>
            <text macro="URL"/>
            <choose>
              <if type="chapter" match="none">
                <text variable="title-short" prefix="[" suffix="]"/>
              </if>
              <else-if>
                <conditions match="all">
                  <condition variable="container-title-short editor collection-editor container-author" match="none"/>
                  <condition variable="page" match="any"/>
                </conditions>
                <text variable="title-short" prefix="[" suffix="]"/>
              </else-if>
            </choose>
          </else>
        </choose>
      </group>
    </layout>
  </bibliography>
</style>
